<h1>Listing ToDos</h1>

<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Assigned to</th>
      <th>Due date</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.assigned_to %></td>
        <td><%= todo.due_date %></td>
        <td><%= todo.priority %></td>
   <!--redundent     <td><%= link_to 'Show', todo %></td> -->
        <td><%= link_to 'Edit', edit_todo_path(todo) %></td>
        <td><%= link_to 'Delete', todo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
