
  <a class="btn btn-lg btn-success" style="width:100%;text-align:center;border-radius:10px;" 
     href="<%= new_todo_path %>">
	<i id="add" class="fa fa-plus fa-2x pull-right"></i>
	<label style="position:relative;top:5px;font-size:1.2em;">Add Task</label></a> 
<table>
  <thead>
    <tr>
      <th>Task</th>
      <th>Assigned to</th>
      <th>Due date</th>
      <th>Priority</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.task %></td>
        <td><%= todo.assigned_to %></td>
        <td><%= todo.due_date %></td>
        <td><%= todo.priority %></td>
   <!--redundent     <td><%= link_to 'Show', todo %></td> -->
        <td><a href="<%= edit_todo_path(todo) %>">
          <i class="fa fa-edit fa-2x"></i>
         </a></td>
        <!--<%= todo, method: :delete, data: { confirm: 'Are you sure?' } %>-->
        <td>
          <a href="#">
            <i class="fa fa-trash-o fa-1x"></i> 
          </a>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

