<%= form_for(@todo) do |f| %>
<div class="btn btn-lg btn-success actions" style="width:100%;text-align:left;border-radius:10px;margin-bottom:5px;color:white;">
	<i id="submit" class="fa fa-star fa-2x pull-right"></i>
  <label style="position:relative;top:5px;font-size:1.2em;"><%= f.submit %></label>
</div> 
  <% if @todo.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@todo.errors.count, "error") %> prohibited this todo from being saved:</h2>

      <ul>
      <% @todo.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :task %><br>
    <%= f.text_field :task %>
  </div>
  <div class="field">
    <%= f.label :assigned_to %><br>
    <%= f.text_field :assigned_to %>
  </div>
  <div class="field">
    <%= f.label :due_date %><br>
    <%= f.date_select :due_date %>
  </div>
  <div class="field">
    <%= f.label :priority %><br>
    <%= f.radio_button(:priority, "1") %>
    <%= f.label(:priority_high, "ASAP!") %>
    <%= f.radio_button(:priority, "2") %>
    <%= f.label(:priority_med, "On Radar") %>
    <%= f.radio_button(:priority, "3") %>
    <%= f.label(:priority_low, "Meah..") %>
  </div>

<% end %>
